<Page x:Class="Learn.ActivityPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Learn"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ListView Name="activityLV"
                  SelectionMode="Single"
                  HorizontalContentAlignment="Stretch"
                  Margin="12"
                  ItemsSource="{Binding Activities}">

            <!-- this is very important for horizontalalignment stretch the items -->
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment"
                            Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.HeaderTemplate>

                <DataTemplate>

                    <Grid  Name="listviewheaders"
                           Margin="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width=".5*" />
                            <ColumnDefinition Width=".5*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width=".3*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Date"
                                   Margin="6" />
                        <TextBlock Text="Action"
                                   Grid.Column="1"
                                   Margin="6" />
                        <TextBlock Text="Description"
                                   Grid.Column="2"
                                   Margin="6" />
                        <TextBlock Text="Points"
                                   Grid.Column="3"
                                   Margin="6" />

                    </Grid>

                </DataTemplate>
            </ListView.HeaderTemplate>
            <ListView.ItemTemplate>
                <DataTemplate>

                    <Grid Name="listviewitemsGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width=".5*" />
                            <ColumnDefinition Width=".5*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width=".3*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding ActionDate}"
                                   Margin="6"
                                   TextTrimming="CharacterEllipsis"
                                   FontWeight="Light" />

                        <TextBlock Text="{Binding ActionName}"
                                   Grid.Column="1"
                                   Margin="6"
                                   FontWeight="Light" />

                        <TextBlock Text="{Binding ActionDescription}"
                                   Grid.Column="2"
                                   Margin="6"
                                   FontWeight="Light" />

                        <TextBlock Text="{Binding ActionPoints}"
                                   Grid.Column="3"
                                   Margin="6"
                                   FontWeight="Light" />

                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Page>
