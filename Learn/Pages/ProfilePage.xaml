<Page x:Class="Learn.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Learn"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Background="Transparent">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="vsGroup">
                <VisualState x:Name="Desktop">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="480"
                                         MinWindowWidth="600" />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="Mobile">
                    <VisualState.Setters>
                        <Setter Target="statisticsTriangle.(UIElement.Visibility)"
                                Value="Collapsed" />
                        <Setter Target="textBlock.(UIElement.Visibility)"
                                Value="Collapsed" />
                        <Setter Target="textBlock1.(UIElement.Visibility)"
                                Value="Collapsed" />
                        <Setter Target="grid.(FrameworkElement.Width)"
                                Value="250" />
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="0"
                                         MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="48" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid Margin="24">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackPanel VerticalAlignment="Center">
                        <TextBlock FontSize="32"
                                   Text="{Binding Name}" />
                        <StackPanel Orientation="Horizontal">
                            <TextBlock  FontSize="24"
                                        Text="Level "
                                        FontWeight="Thin" />
                            <TextBlock Text="{Binding Level}"
                                       FontSize="24"
                                       FontWeight="Thin"
                                       Margin="12,0" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock  FontSize="28"
                                        Text="EXP"
                                        Margin="0,0,24,0"
                                        FontWeight="Thin" />
                            <TextBlock Text="{Binding Exp}"
                                       FontSize="28"
                                       FontWeight="Thin" />
                            <TextBlock  FontSize="28"
                                        Text="/"
                                        Margin="12,0"
                                        FontWeight="Thin" />
                            <TextBlock FontSize="28"
                                       Text="{Binding LevelUpExp}"
                                       FontWeight="Thin" />
                        </StackPanel>

                        <ProgressBar Name="expPB"
                                     Margin="0,12,24,0"
                                     Value="{Binding Exp}"
                                     Maximum="{Binding LevelUpExp}" />

                    </StackPanel>



                </Grid>

                <Grid Name="statisticsTriangle"
                      Grid.Column="1"
                      Grid.RowSpan="2"
                      Margin="0,0,6,0">

                    <Grid VerticalAlignment="Center">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="Reading"
                                   FontWeight="Thin"
                                   HorizontalAlignment="Center" />

                        <Polygon Grid.Row="1"
                                 Margin="72,6"
                                 Points="100,0 0,150, 200,150"
                                 Stroke="Black"
                                 StrokeThickness="1" />

                        <Polygon Grid.Row="1"
                                 Margin="72,6"
                                 Points="100,60.3 67,109.8, 133,109.8"
                                 Stroke="#FFEEEEEE"
                                 StrokeThickness="1" />

                        <Polygon Grid.Row="1"
                                 Margin="72,6"
                                 Points="100,30.6 34,129.6, 166,129.6"
                                 Stroke="#FFEEEEEE"
                                 StrokeThickness="1" />

                        <Line Grid.Row="1"
                              Margin="72,6"
                              X1="100"
                              X2="100"
                              Y1="0"
                              Y2="90"
                              Stroke="LightGray"
                              StrokeThickness="1" />

                        <Line Grid.Row="1"
                              Margin="72,6"
                              X1="0"
                              X2="100"
                              Y1="150"
                              Y2="90"
                              Stroke="LightGray"
                              StrokeThickness="1" />

                        <Line Grid.Row="1"
                              Margin="72,6"
                              X1="200"
                              X2="100"
                              Y1="150"
                              Y2="90"
                              Stroke="LightGray"
                              StrokeThickness="1" />

                        <Polygon Grid.Row="1"
                                 Margin="72,6"
                                 Points="{Binding TrianglePoints}"
                                 Stroke="Green"
                                 StrokeThickness="0.5" />

                        <Grid Grid.Row="2">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Test"
                                       FontWeight="Thin"
                                       HorizontalAlignment="Center" />
                            <TextBlock Grid.Column="2"
                                       Text="Homework"
                                       FontWeight="Thin"
                                       HorizontalAlignment="Center" />

                        </Grid>

                    </Grid>

                </Grid>

                <StackPanel Grid.Row="1">

                    <Grid Margin="24">
                        <StackPanel>
                            <Grid x:Name="grid"
                                  Width="500"
                                  HorizontalAlignment="Left">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />

                                </Grid.RowDefinitions>

                                <TextBlock Text="G"
                                           Margin="24,6"
                                           FontSize="32"
                                           Grid.RowSpan="2"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center" />

                                <TextBlock x:Name="textBlock"
                                           Grid.Column="1"
                                           Text="Gold"
                                           FontSize="24" />

                                <TextBlock x:Name="textBlock1"
                                           Grid.Column="1"
                                           Grid.Row="1"
                                           Text="Used to purchase upgrades"
                                           FontSize="20"
                                           FontWeight="Thin" />

                                <TextBlock Grid.Column="2"
                                           Grid.RowSpan="2"
                                           Text="{Binding Gold}"
                                           FontSize="24"
                                           FontWeight="Thin"
                                           VerticalAlignment="Center"
                                           Margin="24,12" />

                            </Grid>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
